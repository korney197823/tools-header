.cart
	display flex
	justify-content space-between
	width 43.66%
.cart__list
	display flex
	flex-direction column
	justify-content space-between
	width 36.76%

.cart__item
	position relative
	padding-left 30px
	display flex
	align-items center
	height 33%
.cart__icon
	position absolute
	left 0
	&_cart
		sprite($cart)
	&_star
		sprite($star)
		left 3px
	&_libra
		sprite($libra)

.cart__link
	font-size 12px
	text-decoration underline
	color #000
	&_cart
		font-size 14px
.gallery
	display flex
	width 59.52%
	justify-content space-between
.gallery__item
	display flex
	justify-content center
	align-items center
	width 72px
	height 72px
	border 1px solid #d9d9d9
